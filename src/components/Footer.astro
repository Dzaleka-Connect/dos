---
const currentYear = new Date().getFullYear();

const links = {
  services: [
    { name: 'Job Board', href: '/jobs' },
    { name: 'E-Learning Platform', href: '/e-learning' },
    { name: 'Community Voice', href: '/community-voice' },
    { name: 'Submit Voice', href: '/submit-voice' },
    { name: 'Events', href: '/events' },
    { name: 'News', href: '/news' },
    { name: 'Resources', href: '/resources' }
  ],
  community: [
    { name: 'Visit', href: '/visit' },
    { name: 'Post a Job', href: '/jobs/post' },
    { name: 'Skills Exchange', href: '/skills-exchange' },
    { name: 'Culture', href: '/culture' }
  ],
  about: [
    { name: 'About Us', href: '/about' },
    { name: 'Photo Gallery', href: '/photos' },
    { name: 'Documents', href: '/docs' },
    { name: 'Search', href: '/search' },
    { name: 'Analytics', href: '/analytics' }
  ],
  contact: [
    { name: 'Contact Us', href: '/contact' },
    { name: 'Support', href: '/support' },
    { name: 'Privacy Policy', href: '/privacy' },
    { name: 'Terms of Service', href: '/terms' }
  ]
};
---

<footer class="bg-white border-t mt-auto">
  <div class="container mx-auto px-4 py-12">
    <div class="flex flex-wrap -mx-4">
      <!-- Brand -->
      <div class="w-full px-4 mb-8 md:mb-0 md:w-1/5">
        <h2 class="text-xl font-bold text-primary-600 mb-4">Dzaleka Online Services</h2>
        <p class="text-gray-600 mb-4">
          Empowering the Dzaleka community through digital connectivity and collaboration
        </p>
      </div>

      <!-- Services -->
      <div class="w-full px-4 sm:w-1/2 md:w-1/5 mb-8 md:mb-0">
        <h3 class="font-semibold text-gray-900 mb-4">Services</h3>
        <ul class="space-y-2">
          {links.services.map(link => (
            <li>
              <a href={link.href} class="text-gray-600 hover:text-primary-600 transition-colors">
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Community -->
      <div class="w-full px-4 sm:w-1/2 md:w-1/5 mb-8 md:mb-0">
        <h3 class="font-semibold text-gray-900 mb-4">Community</h3>
        <ul class="space-y-2">
          {links.community.map(link => (
            <li>
              <a href={link.href} class="text-gray-600 hover:text-primary-600 transition-colors">
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- About -->
      <div class="w-full px-4 sm:w-1/2 md:w-1/5 mb-8 md:mb-0">
        <h3 class="font-semibold text-gray-900 mb-4">About</h3>
        <ul class="space-y-2">
          {links.about.map(link => (
            <li>
              <a href={link.href} class="text-gray-600 hover:text-primary-600 transition-colors">
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Contact -->
      <div class="w-full px-4 sm:w-1/2 md:w-1/5">
        <h3 class="font-semibold text-gray-900 mb-4">Contact</h3>
        <ul class="space-y-2">
          {links.contact.map(link => (
            <li>
              <a href={link.href} class="text-gray-600 hover:text-primary-600 transition-colors">
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <!-- Copyright -->
    <div class="mt-12 pt-8 border-t border-gray-200">
      <p class="text-center text-gray-500 text-sm">
        {currentYear} Dzaleka Online Services. All rights reserved.
      </p>
    </div>
  </div>
</footer>