                <label class="block text-sm font-medium text-gray-700 mb-2" for="phone">Phone Number</label>
                <input 
                  type="tel" 
                  id="phone" 
                  name="phone" 
                  class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-all" 
                  placeholder="+265 XX XXX XXXX"
                  required
                >
              </div>

              <!-- Visit Details -->
              <div class="grid md:grid-cols-2 gap-6">
